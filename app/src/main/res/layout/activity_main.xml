<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#FDE6E6"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom|center"
                android:layout_weight="2"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom|center"
                android:paddingBottom="12dp"
                android:text="@string/title_text"
                android:textAlignment="center"
                android:textSize="34sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnImageLeft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/baseline_arrow_back_ios_24" />

            <ImageView
                android:id="@+id/imgCarousel"
                android:layout_width="0dp"
                android:layout_height="175dp"
                android:layout_weight="8"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                tools:srcCompat="@drawable/restaurantstockimage" />

            <ImageButton
                android:id="@+id/btnImageRight"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/baseline_arrow_forward_ios_24" />

        </LinearLayout>

        <Button
            android:id="@+id/btnNewlyAddedItems"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:minHeight="60dp"
            android:text="@string/txtNewlyAddedItems"
            android:textAlignment="center"
            android:textSize="16sp"
            app:icon="@drawable/doublechevronright"
            app:iconGravity="end"
            app:iconSize="48dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgNewItem1"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/baseline_image_24" />

                <Button
                    android:id="@+id/btnNewItem1"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="25dp"
                    android:minHeight="25dp"
                    android:text="Button" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imgNewItem2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    app:srcCompat="@drawable/baseline_image_24" />

                <Button
                    android:id="@+id/btnNewItem2"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:height="25dp"
                    android:text="Button" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btnImageLeft"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/doublechevronleft" />

            <TextView
                android:id="@+id/imgCarousel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="8"
                android:gravity="center"
                android:textAlignment="center"
                android:textSize="24sp"
                tools:text="@string/txtReview" />

            <ImageButton
                android:id="@+id/btnImageRight"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/doublechevronright" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnHome"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:gravity="bottom|center_horizontal"
                android:minWidth="80dp"
                android:minHeight="80dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/txtHome"
                android:textAlignment="center"
                android:textSize="10sp"
                app:icon="@drawable/baseline_home_24"
                app:iconGravity="textTop"
                app:iconSize="36dp" />

            <Button
                android:id="@+id/btnMenu"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:gravity="bottom|center_horizontal"
                android:minWidth="80dp"
                android:minHeight="80dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/txtMenu"
                android:textAlignment="center"
                android:textSize="10sp"
                app:icon="@drawable/baseline_restaurant_menu_24"
                app:iconGravity="textTop"
                app:iconSize="36dp" />

            <Button
                android:id="@+id/btnFeedback"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:gravity="bottom|center_horizontal"
                android:minWidth="80dp"
                android:minHeight="80dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/txtFeedback"
                android:textAlignment="center"
                android:textSize="10sp"
                app:icon="@drawable/baseline_feedback_24"
                app:iconGravity="textTop"
                app:iconSize="36dp" />

            <Button
                android:id="@+id/btnInfo"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:gravity="bottom|center_horizontal"
                android:minWidth="80dp"
                android:minHeight="80dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/txtInformation"
                android:textAlignment="center"
                android:textSize="10sp"
                app:icon="@drawable/baseline_info_24"
                app:iconGravity="textTop"
                app:iconSize="36dp" />

            <Button
                android:id="@+id/btnCalculator"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:width="80dp"
                android:height="80dp"
                android:gravity="bottom|center_horizontal"
                android:minWidth="80dp"
                android:minHeight="80dp"
                android:paddingLeft="6dp"
                android:paddingRight="6dp"
                android:text="@string/txtCalculator"
                android:textAlignment="center"
                android:textSize="10sp"
                app:icon="@drawable/baseline_calculate_24"
                app:iconGravity="textTop"
                app:iconSize="36dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>